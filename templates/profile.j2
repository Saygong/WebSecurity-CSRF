{% extends "base.j2" %}
{% block title %}
  	Profile
{% endblock title %}
{% block header %}
  	<h2 style = "margin-bottom: 50px;">Your Profile</h2>
{% endblock header %}
{% block content %}
  	{% if current_user %}
    	<h3>Your account info: </h3>
		
		
		<ul class="list-group">
            <li class="list-group-item"><b>Username: </b>{{ user.username }}</li>
            <li class="list-group-item"><b>User secret: </b>{{ user.secret }}</li>
            <li class="list-group-item"><b>E-mail: </b>{{ user.email }}</li>
        </ul>
		<br>
		
		
  	{% else %}
    	<div>Log in!</div>
  	{% endif %}
{% endblock content %}
